	"version": "0.2.0",
	"configurations": [
		{
			"name": "aug",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/scripts/generate_augmented_poses.py",
			"console": "integratedTerminal",
			"justMyCode": false,
			"args": [
				"--in_dir", "./data_root/devPhase/004_00/"
			]
		},
		{
			"name": "train.py",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/GeoNeRF/run_geo_nerf.py",
			"args": [
				// basic config
				// "--gin_configs", "configs/360.gin",
				// "--gin_bindings", "Config.data_dir = 'data/mip_nerf_360/bicycle'",
				// "--gin_bindings", "Config.exp_name = '360_v2/bicycle'",
				// "--gin_bindings", "Config.factor = 4",
				// for ILSH
				// "--gin_configs", "configs/ilsh.gin",
				// "--gin_bindings", "Config.data_dir = 'data/devPhase/devPhase_01/004_00'",
				// "--gin_bindings", "Config.exp_name = 'ilsh/devPhase_01/004_00'",
				"--config",
				"configs/config_face.txt"
			],
			"console": "integratedTerminal",
			"justMyCode": false,
			"env": {
				"CUDA_VISIBLE_DEVICES": "4"
			},
			"cwd": "${workspaceFolder}/GeoNeRF"
		},
		{
			"name": "render.py",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/render.py",
			"args": [
				// "--gin_configs", "configs/360.gin",
				// "--gin_bindings", "Config.data_dir = 'data/mip_nerf_360/bicycle'",
				// "--gin_bindings", "Config.exp_name = '360_v2/bicycle'",
				// "--gin_bindings", "Config.render_path = True",
				// "--gin_bindings", "Config.render_path_frames = 120",
				// "--gin_bindings", "Config.render_video_fps = 30",
				// "--gin_bindings", "Config.factor = 4",
				"--gin_configs",
				"configs/ilsh.gin",
				"--gin_bindings",
				"Config.data_dir = 'data/devPhase/devPhase_01/004_00'",
				"--gin_bindings",
				"Config.exp_name = 'ilsh/devPhase_01/004_00'",
			],
			"console": "integratedTerminal",
			"justMyCode": false,
			"env": {
				"CUDA_VISIBLE_DEVICES": "4"
			}
		},
		{
			"name": "train TensoRF",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/TensoRF/train.py",
			"args": [
				// for ILSH
				"--config",
				"configs/dsseo_test/ilsh_grid_400.txt"
			],
			"console": "integratedTerminal",
			"justMyCode": false,
			"cwd": "${workspaceFolder}/TensoRF"
		},
	]
}